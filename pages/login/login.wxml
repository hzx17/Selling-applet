<view class="login_box">
     <view class="login_logo">
       <view class="login_logo_box">
     <image src="/img/2.jpg" style="width: 100%; height: 100px;"></image>
       </view>
     </view>
     <view class="login_welcome">欢迎登录乡村基</view>
     <view class="login_usernum">
      <input class="usernum_input" maxlength="11" bindinput="usernuminput" placeholder="请输入你的电话号码" />
      </view>
      <view class="login_password">
      <input class="password_input" bindinput="passwordinput" placeholder="请输入你的密码" />
      <!-- <view class="login_password_huqu">获取验证码</view> -->
      </view>
      <view class="login_botton">
        <button class="login_bottonlogin" bindtap="login" disabled="{{loginBtnstate}}">登录</button>
      </view>
      <view class="login_relogin" bindtap="relogin">没有账号去注册一个>     
      </view>
      <view class="login_icon">
          <view class="login_icon_weixin">
             <image src="/img/weixin.png" style="width: 100%; height: 100%;"></image>
          </view>
          <view class="login_icon_QQ">
             <image src="/img/QQ.png" style="width: 100%; height: 90%;"></image>
          </view>
          <view class="login_icon_zhifu">
             <image src="/img/zhifu.png" style="width: 100%; height: 100%;"></image>
          </view>
      </view>
      <view class="login_text">
          <text class="text1">登陆即代表同意</text>
          <text class="text2" style="color:orange;">《用户协议》</text>
          <text class="text3">和</text>
          <text class="text4" style="color: orange;">《隐私政策》</text>
      </view>
</view>
