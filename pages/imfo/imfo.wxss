/* pages/imfo/imfo.wxss */
page{
  background: #f4f5f7;
}
.imfo_box{
  width: 100%;
  height: 700px;
  margin-top: 10px;
}
.imfo_list{
  width: 95%;
  height: 80px;
  background: white;
  margin: 0 auto;
  border-radius: 10px;
  margin-bottom: 10px;
}
.imfo_list_top{
  width: 95%;
  height: 30px;
  padding: 5px;
}
.imfo_list_top_img{
  width: 30px;
  height: 30px;
  float: left;
}
.imfo_list_top_name{
  width: 60%;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  font-weight: bold;
  float: left;
}
.imfo_list_top_time{
  width: 20%;
  height: 30px;
  line-height: 30px;
  font-size: 12px;
  float: left;
  color: #8a8a8a;
  text-align: center;
}
.imfo_list_top_num{
  width: 15px;
  height: 15px;
  background: red;
  border-radius: 15px;
  font-size: 12px;
  color: white;
  text-align: center;
  line-height: 15px;
  float: left;
  margin-top: 10px;
}
.imfo_list_center{
  width: 90%;
  height: 25px;
  padding-top: 10px;
  font-size: 14px;
  line-height: 25px;
  color: #8a8a8a;
  padding-left: 10px;
}



